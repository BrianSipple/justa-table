{{#justa-table
  content=content
  hideOffscreenContent=true
  caption='Hide Offscreen Rows Example'
  as |table|}}

  {{#table-columns table=table as |row|}}

    {{table-column
      row=row
      width=190
      headerName='Name'
      valueBindingPath='displayName'}}

    {{table-column
      row=row
      width=190
      headerName='Address'
      valueBindingPath='address'}}

    {{table-column
      row=row
      width=190
      headerName='City'
      valueBindingPath='city'}}

    {{table-column
      row=row
      width=190
      headerName='State'
      valueBindingPath='state'}}

    {{table-column
      row=row
      width=100
      headerName='Zip'
      valueBindingPath='zipCode'}}

    {{table-column
      row=row
      width=190
      headerName='Company'
      valueBindingPath='company'}}

  {{/table-columns}}
{{/justa-table}}
